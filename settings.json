{
    // Editor
    "workbench.iconTheme": "vscode-icons",
    "editor.rulers": [
        88
    ],
    "editor.tabCompletion": "on",
    "editor.acceptSuggestionOnEnter": "off",
    "files.trimTrailingWhitespace": true,
    "editor.formatOnSave": true,
    "workbench.startupEditor": "newUntitledFile",
    "window.zoomLevel": 0,
    "breadcrumbs.enabled": true,
    "editor.minimap.enabled": false,
    "editor.detectIndentation": true,
    "editor.suggestSelection": "first",
    "zenMode.hideLineNumbers": false,
    // Python
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "black",
    "python.linting.flake8Args": [
        "--max-line-length",
        "88"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "jupyter.sendSelectionToInteractiveWindow": true,
    "jupyter.interactiveWindowMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "python.languageServer": "Pylance",
    "python.analysis.autoImportCompletions": false,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.diagnosticSeverityOverrides": {
        // Use mypy for type checking
        "reportGeneralTypeIssues": "none"
    },
    "vsicons.dontShowNewVersionMessage": true,
    "extensions.autoUpdate": false,
    "update.mode": "manual",
    "workbench.enableExperiments": false,
    "python.experiments.enabled": false,
    "jupyter.experiments.enabled": false,
    "autoDocstring.docstringFormat": "numpy",
    // Terminal
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    // Needed as of January 2022 to fix wrong Python interpreter used in terminal
    // See https://stackoverflow.com/questions/54582361/vscode-terminal-shows-incorrect-python-version-and-path-launching-terminal-from
    "terminal.integrated.env.osx": {
        "PATH": ""
    },
    // Misc.
    "extensions.ignoreRecommendations": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "git.autofetch": true,
    "telemetry.telemetryLevel": "off",
    // Remote
    "remote.containers.defaultExtensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "eamodio.gitlens",
        "innoverio.vscode-dbt-power-user",
        "ms-python.isort",
        "njpwerner.autodocstring"
    ],
    "remote.SSH.defaultExtensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "eamodio.gitlens",
        "innoverio.vscode-dbt-power-user",
        "ms-python.isort",
        "njpwerner.autodocstring"
    ],
    // Machine specific
    "editor.fontSize": 17,
    "files.associations": {
        "*.yaml": "jinja-yaml",
        "*.yml": "jinja-yaml",
        "*.sql": "jinja-sql",
        "*.md": "jinja-md"
    },
}